@model DBrms.Models.Magazine

@{
    ViewBag.Title = "NewspanelEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>NewspanelEdit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Newspanel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        <input type="hidden" id="MagazineId" name="MagazineId" value="@Model.MagazineId"/>
        <input type="hidden" id="Name" name="Name" value="@Model.Name"/>
        <input type="hidden" id="Image" name="Image" value="@Model.Image"/>
        <input type="hidden" id="Details" name="Details" value="@Model.Details"/>
        

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Name)
                    </td>
                </tr>
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="@Model.Image" height="200" width="400">
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.Details)
                    </td>
                </tr>
               
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                   
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
