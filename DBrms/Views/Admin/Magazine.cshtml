@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DBrms.Models.Magazine>

@{
    ViewBag.Title = "Magazine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Magazine</h2>

<p>
    @Html.ActionLink("Add New Magazine", "MagazineAdd")
</p>
<table class="table">
    <tr>
        <th>
            <p style="padding-left:100px;"> @Html.DisplayNameFor(model => model.First().Name) </p>
</th>
        <th>
            @Html.DisplayNameFor(model => model.First().Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.Image" height="150" width="250" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MagazineId }) |
          
            @Html.ActionLink("Delete", "Delete", new { id=item.MagazineId })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model, page => Url.Action("Magazine", new { page }))
