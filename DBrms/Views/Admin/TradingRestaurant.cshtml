@model IEnumerable<DBrms.Models.TradingRestaurant>

@{
    ViewBag.Title = "TradingRestaurant";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Trading Restaurant</h2>

<p>
    @Html.ActionLink("Add Restaurant", "TradingRestaurantAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.Image" height="200" width="400" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TradingRestaurantId }) |
          
            @Html.ActionLink("Delete", "Delete", new { id=item.TradingRestaurantId })
        </td>
    </tr>
}

</table>
