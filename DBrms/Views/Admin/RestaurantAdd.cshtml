@model DBrms.Models.Restaurant

@{
    ViewBag.Title = "RestaurantAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link rel="stylesheet" href="~/Content/Login/dist/css/site.min.css">



<h2>RestaurantAdd</h2>

<div class="container-fluid" style="font-size:13px;">
    @using (Html.BeginForm("RestaurantAdd", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">

                    <input class="form-control" type="text" name="Name" required />

                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input class="form-control" type="text" name="Address" required />
                   
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input class="form-control" type="text" name="Phone" pattern="\+?(88)?01[3456789][0-9]{8}\b" required />
                   
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Picture, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input type="file" id="ImageFile" name="ImageFile" required />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                     @Html.DropDownList("LocationId", null, "--Select One Location--", htmlAttributes: new { @class = "from-control"} ) 
                   

                    </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.CostPerOrder, htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-5">
                    <input class="form-control" type="text" name="CostPerOrder" required />
                  
                    <label>Example "199-200"</label>
                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.Cuisine, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input class="form-control" type="text" name="Cuisine" required />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input class="form-control" type="text" name="Username" required />
                   
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <input class="form-control" type="password" name="Password" required />
                   
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "ManageRestaurant")
</div>
