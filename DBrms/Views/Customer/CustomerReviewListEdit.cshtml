@model DBrms.Models.Review

@{
    ViewBag.Title = "CustomerReviewListEdit";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Review Edit</h2>
<link rel="stylesheet" href="~/Content/Login/dist/css/site.min.css">

<div class="container-fluid" style="font-size:13px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            <input type="hidden" id="ReviewId" name="ReviewId" value="@Model.ReviewId" />
            <input type="hidden" id="RestaurantsId" name="RestaurantsId" value="@Model.RestaurantsId" />
            <input type="hidden" id="CustomerId" name="CustomerId" value="@Model.CustomerId" />
            <input type="hidden" id="Date" name="Date" value="@Model.Date" style="visibility:hidden" />
            <input type="checkbox" id="IsActive" name="IsActive" value="@Model.IsActive" style="visibility:hidden" />
            <input type="hidden" id="Rating" name="Rating" value="@Model.Rating" />


            <div class="form-group">
                @Html.LabelFor(model => model.Restaurant.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                   <label style="padding-top:10px">
                        @Model.Restaurant.Name
                   </label>
                       
                    
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Restaurant.Picture, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img src="@Model.Restaurant.Picture" height="150" width="250" />
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" type="text" name="Description" required value="@Model.Description" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

