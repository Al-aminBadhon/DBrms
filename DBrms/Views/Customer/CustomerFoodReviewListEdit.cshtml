@model DBrms.Models.ReviewFood

@{
    ViewBag.Title = "CustomerFoodReviewListEdit";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>CustomerFoodReviewListEdit</h2>
<link rel="stylesheet" href="~/Content/Login/dist/css/site.min.css">

<div class="container-fluid" style="font-size:13px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>ReviewFood</h4>
            <hr />
            <input type="hidden" id="ReviewFoodId" name="ReviewFoodId" value="@Model.ReviewFoodId" />
            <input type="hidden" id="FoodId" name="FoodId" value="@Model.FoodId" />
            <input type="hidden" id="CustomerId" name="CustomerId" value="@Model.CustomerId" />
            <input type="hidden" id="Date" name="Date" value="@Model.Date" />
            <input type="hidden" id="RatingFood" name="RatingFood" value="@Model.RatingFood" />
            <input type="checkbox" id="IsActive" name="IsActive" value="@Model.IsActive" style="visibility:hidden" />




            <div class="form-group">
                @Html.LabelFor(model => model.Food.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <label style="padding-top:10px">
                        @Model.Food.Name
                    </label>

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Food.Image, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="col-md-10">
                        <img src="@Model.Food.Image" height="100" width="200" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input class="form-control" type="text" name="Description" required value="@Model.Description" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    </div>
  