@model IEnumerable<DBrms.Models.Food>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<div>
    @foreach (var item in ViewBag.Restaurants)
    {
        <h2>Menu of @item.Name</h2>
    }
</div>
<p>
    @Html.ActionLink("Add Menu", "MenuAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.Image" height="150" width="300"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FoodId })|
         
            @Html.ActionLink("Delete", "Delete", new { id=item.FoodId })
        </td>
    </tr>
}

</table>
