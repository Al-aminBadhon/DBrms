@model DBrms.Models.Restaurant

@{
    ViewBag.Title = "RestaurantProfile";
    Layout = "~/Views/Shared/_WebsiteLayout.cshtml";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<div class="services-breadcrumb">
    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    <a> Home </a>
                    <i> |   </i>
                </li>
                <li> Restaurents </li>
                <i> | </i>
                <li> @Model.Name </li>
            </ul>
        </div>
    </div>
</div>
<center>

    <p><font size="7" color="#7f6018"><img src="~/Image/chef-restaurant-logo-publicdomainvectors.png" height="50" width="50" /> <b><i> @Model.Name </i></b></font></p>
</center>

<center>
    <img src="@Model.Picture" align="middle" height="350" width="600" />
</center>
<center>
    <table style="width:20%">
        <tr>
            <td> | Popular Menu</td>
            <td>@Model.Name</td>

        </tr>
    </table>
</center>


<div class="w3-container">
    <h2>Tabs</h2>

</div>

    <div class="w3-bar w3-black" style="width: 175px; margin-left: 550px; background-color:aquamarine;">

        <button class="w3-bar-item w3-button" onclick="openCity('Overview')"> Overview </button>
        <button class="w3-bar-item w3-button" onclick="openCity('Menu')"> Menu </button>

    </div>


    <div id="Overview" class="w3-container city">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Picture)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Picture)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PopularMenu)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PopularMenu)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CostPerOrder)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CostPerOrder)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Time)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Time)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cuisine)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cuisine)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Extra)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Extra)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Discount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Discount)
            </dd>



        </dl>

    </div>

<div id="Menu" class="w3-container city" style="display:none">
    <h2>Food</h2>
    <p>Food List</p>
</div>



<script>
    function openCity(cityName) {
        var i;
        var x = document.getElementsByClassName("city");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        document.getElementById(cityName).style.display = "block";
    }
</script>




    

